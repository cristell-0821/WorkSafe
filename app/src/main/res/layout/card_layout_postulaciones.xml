<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="20dp"
        tools:ignore="TextSizeCheck">


        <TextView
            android:id="@+id/NombrePostulantes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/card_view"
            android:text="Nombre postulantes"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,NotSibling" />

        <TextView
            android:id="@+id/correoPostulantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NombrePostulantes"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/card_view"
            android:textSize="13sp"
            android:textStyle="bold"
            android:alpha="0.8"
            android:text="@string/correo_postulantes"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/telefonoPostulantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/correoPostulantes"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/card_view"
            android:textSize="13sp"
            android:textStyle="bold"
            android:alpha="0.8"
            android:text="@string/tel_fono_postulante"
            tools:ignore="NotSibling" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_descargar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/telefonoPostulantes"
            android:drawableLeft="@drawable/icon_descargar"
            android:drawableTint="@color/white"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/card_view"
            android:text="@string/descargar_cv"
            android:textStyle="bold"
            tools:ignore="NotSibling,RtlHardcoded,VisualLintButtonSize" />



    </RelativeLayout>


</androidx.cardview.widget.CardView>