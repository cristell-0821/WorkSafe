<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->

    </style>

    <style name="BlurredDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item> <!-- Ajusta la cantidad de atenuaciÃ³n, entre 0 (sin atenuar) y 1 (completamente oscuro) -->
    </style>

    <style name="TransparentFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="elevation">0dp</item> <!-- Si quieres eliminar la sombra -->
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>



</resources>